{
	"name": "vsc-esp-updater",
	"displayName": "ESP Updater",
	"description": "",
	"publisher": "masuidrive",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": "http://github.com/masuidrive/vsc-esp-updater.git",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsc-esp-updater.start",
		"onCommand:vsc-esp-updater.stop"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc-esp-updater.start",
				"title": "Start ESP Updater on browser"
			},
			{
				"command": "vsc-esp-updater.stop",
				"title": "Stop ESP Updater on browser"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch --progress",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.6",
		"@babel/preset-react": "^7.14.5",
		"@babel/register": "^7.15.3",
		"@types/bootstrap": "^5.1.6",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/react": "^17.0.24",
		"@types/react-dom": "^17.0.9",
		"@types/vscode": "^1.60.0",
		"@types/w3c-web-serial": "^1.0.2",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"autoprefixer": "^10.3.4",
		"babel-loader": "^8.2.2",
		"css-loader": "^6.2.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"html-inline-script-webpack-plugin": "^2.0.2",
		"html-webpack-plugin": "^5.3.2",
		"mocha": "^8.4.0",
		"postcss-loader": "^6.1.1",
		"sass": "^1.40.1",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.2.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"webpack-dev-server": "^4.3.0"
	},
	"dependencies": {
		"@toit/esptool.js": "^0.10.1",
		"arraybuffer-to-string": "^1.0.2",
		"bootstrap": "^5.1.1",
		"crypto-js": "^4.1.1",
		"pako": "^2.0.4",
		"react": "^17.0.2",
		"react-bootstrap": "^2.0.0-rc.0",
		"react-dom": "^17.0.2",
		"xterm": "^4.14.1",
		"xterm-addon-fit": "^0.5.0",
		"xterm-for-react": "^1.0.4"
	}
}
